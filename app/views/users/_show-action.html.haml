.content
  = mypage_background_image_present?(current_user.account)
  .mypage-user-icon
    = mypage_icon_image_present?(current_user.account)
    .mypage-user-icon-name
      = current_user.nickname
    .mypage-user-icon-nav
      %p
        評価
      %p
        出品数

  .mypage-tab-container-notification-todo
    .mypage-tabs
      .mypage-tabs-left
        = link_to "#", class:"news-message" do
          %input{type: "button", value: "お知らせ"}
          %ul
            %li
      .mypage-tabs-right
        = link_to "#", class:"news-message" do
          %input{type: "button", value: "やることリスト"}
          %ul
            %li
    = render "notifications/notice-mypage" 